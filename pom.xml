    <developers>
        <developer>
            <id>Southeast</id>
            <name>Southeast</name>
            <email>tomxiaodong@163.com</email>
            <url>https://github.com/Southeast</url>
            <organization>zhipu ai</organization>
            <organizationUrl>https://open.bigmodel.cn/</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
